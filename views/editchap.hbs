<!DOCTYPE>
<html>

<head>
    <title>Edit</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="jumbotron text-center">
        <h1 class="text-center"> Sửa chap</h1>
        <hr><br>
        <form method="post" action="" enctype="application/x-www-form-urlencoded">
            <div class="row">
                <span class="col-lg-2"></span>
                <label class="col-lg-2">Name: </label>
                <select class="col-lg-4" id="mangaName" name="mangaName">
                    <option value="{{data.mangaName}}">{{data.mangaName}}</option>
                    <script>
                        $(document).ready(function () {
                            $.get('/getmanga', function (manga) {
                                if (manga && manga.length > 0) {
                                    manga.forEach(function (manga) {
                                        $('#mangaName').append($('<option>', {
                                            value: manga.manganame,
                                            text: manga.manganame
                                        }));
                                    });
                                }
                            });
                        });
                    </script>
                </select>
            </div><br>

            <div class="row">
                <span class="col-lg-2"></span>
                <label class="col-lg-2">Chapter: </label>
                <input class="col-lg-4" required type="number" id="number" name="number" placeholder="Nhập tên chap"
                    value="{{data.number}}">
            </div><br>

            <div class="row">
                <span class="col-lg-2"></span>
                <label class="col-lg-2">Status: </label>
                <select class="col-lg-4" id="viporfree" name="viporfree">
                    <option value="{{data.viporfree}}">{{data.viporfree}}</option>
                </select>

                <script>
                    $(document).ready(function () {
                        $.get('/viporfrees', function (data) {
                            if (data && data.length > 0) {
                                data.forEach(function (viporfreeValue) {
                                    $('#viporfree').append($('<option>', {
                                        value: viporfreeValue,
                                        text: viporfreeValue
                                    }));
                                });
                            }
                        });
                    });
                </script>
            </div><br>
            <div class="row">
                <span class="col-lg-2"></span>
                <label class="col-lg-2">Chapter Image: </label>
               <textarea class="col-lg-4"  required id="images" name="images" placeholder="Nhập các liên kết ảnh, mỗi liên kết trên một dòng" rows="10" cols="30">{{data.images}}</textarea>
            </div><br>
            
            <div class="row">
                <span class="col-lg-2"></span>
                <label class="col-lg-2">Price: </label>
                <input class="col-lg-4" required type="number" id="price" name="price" placeholder="Nhập giá chap"
                    value="{{data.price}}">
            </div><br>
            
            
            <br>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>

        </form>
    </div>
</body>

</html>